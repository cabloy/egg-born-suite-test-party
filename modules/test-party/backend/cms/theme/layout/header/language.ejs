<% if(site.languages && site.languages.length>1){ %>
<%
  // options
  const _options=typeof options!=='undefined'?options:null;
  // showLabel
  const showLabel=_options && _options.showLabel;
  const languageLabel=showLabel? ` ${text('Languages')}` : '';
%>
<li class="nav-item dropdown">
  <a href="#" class="nav-link"><i class="fas fa-globe"></i><%=languageLabel%></a>
  <ul class="navbar-nav">
    <% for(const item of site.languages){ %>
    <li class="nav-item"><a href="<%=item.url%>" class="nav-link"><%=text(item.title)%></a></li>
    <% } %>
  </ul>
</li>
<% } %>
